<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="Gjs__Window" parent="AdwApplicationWindow">
    <property name="default-width">1000</property>
    <property name="default-height">800</property>
    <property name="width-request">300</property>
    <property name="height-request">200</property>
    <style>
      <class name="devel" />
    </style>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 400sp</condition>
        <setter object="split_view" property="collapsed">True</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 800sp</condition>
        <setter object="overlay_split_view" property="collapsed">True</setter>
      </object>
    </child>
    <child>
      <object class="AdwToolbarView" id="toolbar_view">
        <property name="content">
          <object class="AdwNavigationSplitView" id="split_view">
            <property name="min-sidebar-width">250</property>
            <property name="max-sidebar-width">350</property>
            <property name="show-content">true</property>
            <property name="sidebar">
              <object class="AdwNavigationPage">
                <child>
                  <object class="AdwToolbarView">
                    <property name="hexpand">false</property>
                    <child type="top">
                      <object class="AdwHeaderBar" id="nav_header_bar">
                        <property name="title-widget">
                          <object class="GtkLabel">
                            <property name="label">Muzika</property>
                            <style>
                              <class name="heading" />
                            </style>
                          </object>
                        </property>
                        <child type="end">
                          <object class="GtkMenuButton">
                            <property name="icon-name">open-menu-symbolic</property>
                            <property name="menu-model">primary_menu</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <property name="content">
                      <object class="GtkScrolledWindow" id="navbar_window">
                        <property name="vexpand">true</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
            <property name="content">
              <object class="AdwNavigationPage">
                <child>
                  <object class="AdwToastOverlay" id="toast_overlay">
                    <child>
                      <object class="AdwOverlaySplitView" id="overlay_split_view">
                        <property name="sidebar-position">1</property>
                        <property name="sidebar-width-fraction">0.4</property>
                        <property name="min-sidebar-width">300</property>
                        <property name="max-sidebar-width">400</property>
                        <property name="show-sidebar">false</property>
                        <property name="pin-sidebar">true</property>
                        <property name="content">
                          <object class="AdwNavigationView" id="navigation_view">
                            <property name="vexpand">true</property>
                            <property name="width-request">300</property>
                          </object>
                        </property>
                        <!-- <property name="sidebar">
                          <object class="GtkBox" id="sidebar_box">
                            <property name="width-request">300</property>
                            <property name="hexpand">false</property>
                            <style>
                              <class name="background" />
                            </style>
                          </object>
                        </property> -->
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="true">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="true">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="true">_About Muzika</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>