using Gtk 4.0;
using Adw 1;

template $EditPlaylistDialog : Adw.PreferencesDialog {
  title: _("Edit Playlist");
  //content-width: 360;
  //content-height: 440;

  Adw.PreferencesPage {
    title: _("Edit Playlist");

    Adw.PreferencesGroup {
      title: _("General");

      Adw.EntryRow title {
        title: _("Title");
      }

      Adw.EntryRow description {
        title: _("Description");
      }

      Adw.ComboRow privacy {
        title: _("Privacy");
        factory: SignalListItemFactory {};
      }
    }

    Adw.PreferencesGroup {
      Button save {
        halign: center;
        label: _("Save");
        clicked => $save_cb();

        styles [
          "pill",
          "suggested-action",
        ]
      }
    }
  }
}
