<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="RelatedView" parent="GtkStack">
    <child>
      <object class="AdwStatusPage" id="no_related">
        <property name="icon-name">heart-broken-symbolic</property>
        <property name="title" translatable="yes">No related music</property>
        <property name="description" translatable="yes">We couldn't find any music related to this track.</property>
      </object>
    </child>
    <child>
      <object class="GtkSpinner" id="loading">
        <property name="hexpand">true</property>
        <property name="halign">3</property>
        <property name="width-request">32</property>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="related_window">
        <property name="hscrollbar-policy">2</property>
        <child>
          <object class="GtkBox" id="box">
            <property name="orientation">1</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>