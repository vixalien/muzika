using Gtk 4.0;
using Adw 1;

template $HistoryPage : Adw.Bin {
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {}
  
    content: Adw.BreakpointBin {
      width-request: 200;
      height-request: 200;
      
      Adw.Breakpoint {
        condition ("max-width: 700sp")

        setters {
          item_view.show_column: false;
        }
      }
      
      ScrolledWindow scrolled {
        hexpand: true;
        hscrollbar-policy: never;

        $PlaylistItemView item_view {
          show-column: true;
        }
      }
    };
  }
}
