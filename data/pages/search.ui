<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="SearchPage" parent="GtkBox">
    <child>
      <object class="GtkScrolledWindow" id="scrolled">
        <property name="vexpand">true</property>
        <property name="hscrollbar-policy">never</property>
        <child>
          <object class="AdwClamp">
            <property name="tightening-threshold">800</property>
            <property name="maximum-size">1000</property>
            <child>
              <object class="GtkBox" id="content">
                <property name="orientation">1</property>
                <child>
                  <object class="GtkSeparator">
                    <property name="margin-top">12</property>
                    <style>
                      <class name="spacer" />
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkStack" id="stack">
                    <child>
                      <object class="GtkBox" id="sections">
                        <property name="orientation">1</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwStatusPage" id="no_results">
                        <property name="title" translatable="yes">No Results</property>
                        <property name="vexpand">true</property>
                        <property name="icon-name">system-search-symbolic</property>
                        <property name="description" translatable="yes">Try a different search</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <!-- <child>
                  <object class="Paginator" id="load_more"></object>
                </child> -->
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>