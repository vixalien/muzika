{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowJs": true,
    "checkJs": true,
    "outDir": "_build",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "types/*",
        "gi-types/*"
      ]
    },
    "typeRoots": [
      "gi-types"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "gi-types/gi.d.ts",
    "types/ambient.d.ts",
    "src/**/*"
  ]
}